# Environment Variables Template
# Copia questo file in .env e configura i tuoi valori

# =============================================================================
# Neo4j Database Configuration
# =============================================================================
NEO4J_URI=neo4j+s://your-instance.databases.neo4j.io
NEO4J_USER=neo4j
NEO4J_PASSWORD=your-password-here

# =============================================================================
# Spotify API Configuration
# =============================================================================
# Registra la tua app su https://developer.spotify.com/dashboard
SPOTIFY_CLIENT_ID=your-spotify-client-id
SPOTIFY_CLIENT_SECRET=your-spotify-client-secret
SPOTIFY_REDIRECT_URI=http://localhost:3000/callback

# =============================================================================
# JWT Configuration per autenticazione
# =============================================================================
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# =============================================================================
# External APIs Configuration
# =============================================================================

# Wikipedia/MediaWiki API
WIKIPEDIA_USER_AGENT=MusicAtlas/1.0 (your-email@example.com)
WIKIPEDIA_BASE_URL=https://en.wikipedia.org/api/rest_v1

# MusicBrainz API
MUSICBRAINZ_USER_AGENT=MusicAtlas/1.0 (your-email@example.com)
MUSICBRAINZ_BASE_URL=https://musicbrainz.org/ws/2

# Setlist.fm API (richiede registrazione)
SETLISTFM_API_KEY=your-setlistfm-api-key
SETLISTFM_BASE_URL=https://api.setlist.fm/rest/1.0

# TMDb (The Movie Database) API
TMDB_API_KEY=your-tmdb-api-key
TMDB_BASE_URL=https://api.themoviedb.org/3

# Bandsintown API
BANDSINTOWN_API_KEY=your-bandsintown-api-key
BANDSINTOWN_BASE_URL=https://rest.bandsintown.com

# =============================================================================
# Caching Configuration (Redis)
# =============================================================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
CACHE_TTL_SECONDS=3600

# =============================================================================
# Application Configuration
# =============================================================================
DEBUG=true
ENVIRONMENT=development
LOG_LEVEL=INFO

# CORS settings for development
CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]

# Rate limiting
RATE_LIMIT_PER_MINUTE=60

# Background task configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# =============================================================================
# Security Settings
# =============================================================================
# In produzione, usa HTTPS
FORCE_HTTPS=false

# Cookie settings
COOKIE_SECURE=false
COOKIE_SAMESITE=lax

# =============================================================================
# Performance Settings
# =============================================================================
# Neo4j connection pool
NEO4J_MAX_CONNECTION_POOL_SIZE=100
NEO4J_CONNECTION_ACQUISITION_TIMEOUT=60

# API timeout settings
API_TIMEOUT_SECONDS=30
SPOTIFY_API_TIMEOUT=10
EXTERNAL_API_TIMEOUT=15

# =============================================================================
# Development & Testing
# =============================================================================
# Test database (separata da produzione)
TEST_NEO4J_URI=neo4j+s://test-instance.databases.neo4j.io
TEST_NEO4J_USER=neo4j
TEST_NEO4J_PASSWORD=test-password

# Mock external APIs durante i test
MOCK_EXTERNAL_APIS=false

# =============================================================================
# Production Settings (commentate per development)
# =============================================================================
# Decommentare e configurare per produzione

# ENVIRONMENT=production
# DEBUG=false
# LOG_LEVEL=WARNING
# FORCE_HTTPS=true
# COOKIE_SECURE=true
# CORS_ORIGINS=["https://yourdomain.com"]

# # Sentry per error tracking
# SENTRY_DSN=your-sentry-dsn

# # Monitoring
